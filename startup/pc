gatex = EpicsMotor('XF:11BMB-ES{Chm:Gate-Ax:X}Mtr', name='gatex')

## easy access for stages
def wbs():
    print('bsx = {}'.format(bsx.position))
    print('bsy = {}'.format(bsy.position))
    print('bsphi = {}'.format(bsphi.position))
    
