def tri_plan(tri, value):
    if value == 'Open':
        yield from bps.mov(tri.full, 'Open')
    elif value == 'Soft':
        yield from bps.mov(tri.full, 'Close')
        yield from bps.mov(tri.soft, 'Open')
    elif value == 'Close':
        yield from bps.mov(tri.full, 'Close')
        yield from bps.mov(tri.soft, 'Close')

