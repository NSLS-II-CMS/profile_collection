                link_name = '{}/{}{}_maxs.tiff'.format(RE.md['experiment_alias_directory'], subdir, savename)
                
                if os.path.isfile(link_name):
                    i = 1
                    while os.path.isfile('{}.{:d}'.format(link_name,i)):
                        i += 1
                    os.rename(link_name, '{}.{:d}'.format(link_name,i))
